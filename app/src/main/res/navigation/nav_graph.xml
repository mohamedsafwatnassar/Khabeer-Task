<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.khabeer.payrollapp.login.view.LoginFragment"
        android:label=" "
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_PayrollFragment"
            app:destination="@id/PayrollFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/PayrollFragment"
        android:name="com.khabeer.payrollapp.payroll.view.PayrollFragment"
        android:label=" "
        tools:layout="@layout/fragment_payroll">

    </fragment>

</navigation>